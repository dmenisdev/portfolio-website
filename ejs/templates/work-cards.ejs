<% /* templates/item-list.ejs */ %>
<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width">
     <link rel="icon" type="image/svg+xml" href="/favicon.ico">
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link rel="preload"
          href="https://fonts.googleapis.com/css2?family=Epilogue:wght@300;400;700&family=Inter:wght@400;700&display=swap"
          rel="stylesheet">
     <title><%= title %></title>
     <meta name="description" content="<%= description %>">
     <link rel="stylesheet" href="style.css" />
</head>

<body class="light">
     <div id="swup">
          <header class="header contain dmenis-header">
               <a class="logo large dmenis-header" href="/">
                    <img src="<%= logo %>" alt="Profile Logo" class="profile-logo" width="54" height="48" />
                    <div class="name dmenis-header">
                         <h1 class="title dmenis-header"><%= name %></h1>
                         <h2 class="subtitle dmenis-header"><%= subtitle %></h2>
                    </div>
               </a>
               <a class="contact-me" href="contacts.html">
                    <img src="/images/paper-plane-solid.svg" alt="Paper Plane Icon" class="contact-icon" />
                    <p class="small-text">contact me</p>
               </a>
          </header>
          <main class="contain dmenis-dn001">
               <div class="dmenis-dn001">
                    <!-- <p class="dmenis-dn001">Hi there! My nick name is Dennis and I &#39;m from the Netherlands.</p> -->
                    <p class="intro dmenis-dn001"><%= intro %></p>
                    <p class="small-text">to find out more about some of my work click on the images.</p>
               </div>
               <section class="work-list dmenis-dn001">
<% items.forEach(function(item, index){ %>
    <div class="work-item dmenis-item<%= String(index + 1).padStart(3, '0') %>">
        <input type="checkbox" id="card-flipper-<%= item.id %>" class="card-flipper-checkbox">
        <label for="card-flipper-<%= item.id %>" class="work-item-flipper-label">
             <div class="work-card-inner">
                  <div class="work-card-front">
                       <picture>
                            <source type="image/avif"
                                 srcset="<%= item.image %>.avif 1x, <%= item.image %>.avif 2x">
                            <img src="<%= item.image %>.jpg" alt="<%= item.title %>" width="1200"
                                 height="800" loading="lazy"
                                 onerror="this.onerror=null;this.src='https://placehold.co/1200x800/E0E0E0/B0B0B0?text=Image+Not+Found';">
                       </picture>
                  </div>
                  <div class="work-card-back">
                       <div class="work-card-back-content">
                            <h3><%= item.title %></h3>
                            <p><%= item.content %></p>
                            <p>Role: <%= item.role %></p>
                            <p><%= item.tech_stack %></p>
                       </div>
                  </div>
             </div>
        </label>
    </div>
<% }); %>
</section>
</main>
</div>
</body>

</html>